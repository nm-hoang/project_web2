<%- include('header')-%>
<%- include('nav')-%>
<title> User account </title>   
<link rel="stylesheet" href="stylesheets/mystyle.css">


<div class = "container emp-profile" style = "margin-top: 110px;">
<br>
  

<div class="col-xl-7 col-lg-7 col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="buyer-seller">
                    <div class="d-flex justify-content-between mb-3">
                            <div class="media">
                                <div class="media-body">
                                    <h2>Account Information</h2>
                                    <h4 style="color:black"><%= currentUser.displayName %></h4>
                                     <h4 style="color:black"><%= currentUser.email %></h4>
                                </div>
                            </div>
                        
                    </div>
                      <% if(tktk == null) { %>
                        <a href="./savings_account" class="buttontk">Đăng kí tài khoản tiết kiệm</a>
                     <% } %>
                     <br><br>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr >
                                    <td><span class="text-primary">Your account</span></td>
                                    <td><span class="text-primary"><%= currentUser.account_number %></span></td>
                                </tr>
                                 <tr >
                                    <td><span class="text-primary">Ngày mở</span></td>
                                    <td><span class="text-primary"><%= openDay %></span></td>
                                </tr>
                                <tr style = "background: #655f5f;" >
                                <td >
                                    <h4> Tài khoản thanh toán</h4>
                                </td>
                                </tr>
                                <tr>
                                    <td>Số dư</td>
                                    <td><%= money %> VNĐ</td>
                                </tr>
                              
                                <tr style = "background: #655f5f;" >
                                <td >
                                    <h4> Tài khoản tiết kiệm  </h4>
                                    <% if(tktk ==null){ %>
                                        <h4>&nbsp (Chưa đăng kí) </h4>
                                    <%} %>
                                </td>

                                </tr>
                                <% if(tktk) { %>
                                <tr>
                                <td>Số dư tiết kiệm:</td>
                                <td> <%= tktk.current_balance %> </td>
                                </tr>
                                 <tr>
                                    <td>Lãi suất</td>
                                    <td><%= tktk.interest_rate %> %</td>
                                </tr>
                                <tr>
                                    <td>Kỳ hạn</td>
                                    <td><%= tktk.term%> tháng</td>
                                </tr>
                                <tr>
                                    <td>Ngày đóng</td>
                                    <td><%= closeDay %> </td>
                                </tr>
                              
                                <% } %>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
<%- include('footer')-%>