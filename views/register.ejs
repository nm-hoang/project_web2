<%- include('header'); -%>
<%- include('nav'); -%>

 <div class="authincation section-padding">
            <div class="container h-100">
                <div class="row justify-content-center h-100 align-items-center">
                    <div class="col-xl-5 col-md-6">
                        <div class="mini-logo text-center my-5">
                            <img src="images/m_logo.png" alt="">
                        </div>
                        <div class="auth-form card">
                            <div class="card-header justify-content-center">
                                <h4 class="card-title">Đăng kí tài khoản người dùng</h4>
                            </div>
                            <div class="card-body">
                                <form method="post" name="myform" class="signup_validate">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control" placeholder="abc@gmail.com" name = "email">
                                    </div>
                                    <div class="form-group">
                                        <label>Tên hiển thị</label>
                                        <input type="text" class="form-control" placeholder="Nguyen Van A"
                                             name = "displayName">
                                    </div>
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input type="text" class="form-control" placeholder="84...."
                                           name = "phoneNumber">
                                    </div>
                                    <div class="form-group">
                                    <label>Loại giấy tờ</label>
                                    <select class="browser-default custom-select" name = "paperType">
                                        <option selected value="CMND">CMND</option>
                                        <option value="CCCD">CCCD</option>
                                        <option value="passPort">Hộ chiếu</option>
                                    </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Số giấy tờ</label>
                                        <input type="text" class="form-control" placeholder="0123.."
                                           name = "numberPaper">
                                    </div>
                                     <div class="md-form md-outline input-with-post-icon datepicker form-group" id="customDays">
                                      <label>Ngày cấp</label>
                                        <input placeholder="Ngày cấp" type="date" name="dateRange" id="Customization" class="form-control">
                                        <i class="fas fa-calendar input-prefix " tabindex=0></i>
                                    </div>
                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-success btn-block">Đăng kí</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%- include('footer'); -%>